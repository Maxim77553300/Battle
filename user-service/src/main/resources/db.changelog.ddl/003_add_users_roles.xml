<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd ">
    <changeSet id="002.01_create_users_roles_table" author="Maksim Shumkov">
        <createTable tableName="users_roles">
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_id" type="varchar(100)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="users_roles"
                                 constraintName="fk_users_roles_users_id"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="users_roles"
                                 constraintName="fk_users_roles_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="role"/>
        <addUniqueConstraint tableName="users_roles" columnNames="user_id, role_id"/>
    </changeSet>
</databaseChangeLog>