<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="001.01_create_audit_log_table" author="Maksim Shumkov">
        <createTable tableName="audit_log">
            <column name="id" type="varchar(36)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="action" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="method_signature" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="detail" type="varchar(250)"/>
            <column name="created_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="entity_id" type="varchar(150)"/>
            <column name="processing_time" type="varchar(150)"/>
        </createTable>
    </changeSet>
    <changeSet id="001.02_create_audit_log_table" author="Maksim Shumkov">
        <modifyDataType
                columnName="detail"
                newDataType="varchar(700)"
                tableName="audit_log"/>
    </changeSet>
</databaseChangeLog>