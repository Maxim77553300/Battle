<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="002.01_add_admin_users_table" author="Maksim Shumkov">
        <insert tableName="users">
            <column name="id" type="varchar(36)" valueComputed="${u_id}"/>
            <column name="name" value="super_admin"/>
            <column name="password" value="$2a$10$GTIAfLNNUUsF98GH4zHA4eH38nnfb4H8Q.wREapZOY.OviZ.rq4xC"/>
            <column name="email" value="admin@tut.by"/>
            <column name="status" value="ACTIVE"/>
        </insert>
    </changeSet>
    <changeSet id="002.02_add_admin_to_users_roles_table" author="Maksim Shumkov">
        <insert tableName="users_roles">
            <column name="user_id" valueComputed="(select id from users where name = 'super_admin')"/>
            <column name="role_id" valueComputed="(select id from role where name = 'ADMIN')"/>
        </insert>
    </changeSet>
</databaseChangeLog>