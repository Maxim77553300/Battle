<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">
    <changeSet id="001.01_create_statisticsUser_table" author="Maxim Shumkov">
        <createTable tableName="statistics_user">
            <column name="id" type="varchar(36)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="number_of_games" type="int"/>
            <column name="number_of_wins" type="int"/>
            <column name="number_of_looses" type="int"/>
            <column name="number_of_draw" type="int"/>
            <column name="number_of_moves" type="int"/>
            <column name="created_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>